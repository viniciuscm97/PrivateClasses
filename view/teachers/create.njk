{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers">
    <section class="avatar"
     style= "background: url(https://source.unsplash.com/collection/4409762/320x320) no-repeat center center/ cover"> </section>

    <section class="info">

        <h3>Novo professor</h3>

        <div class="item">
            <div>Avatar:</div>
            <div>
                <input type="url" name="avatar_url" placeholder="http://">
            </div>
        </div>
        
        <div class="item">
            <div>Nome completo:</div>
            <div>
                <input type="text" name="name" placeholder="Nome do professor">
            </div>
        </div>
        
        <div class="item">
            <div>Data de nascimento:</div>
            <div>
                <input type="date" name="birthday">
            </div>
        </div>
        
        <div class="item">
            <div>Grau de escolaridade:</div>
            <div>
                <select name="education" >
                    <option value="EMC">Ensino Médio Completo</option>
                    <option value="ESC">Ensino Superior Completo</option>
                    <option value="M">Mestrado</option>
                    <option value="D">Doutorado</option>
                </select>
            </div>
        </div>
        
        <div class="item">
            <div>Tipo de aula:</div>
            <div>
                <span>
                <input type="radio" name="typeClass" value="P" checked>
                Presencial
                </span>
                
                <span>
                <input type="radio" name="typeClass" value="D">
                Á distância
                </span>
            </div>
        </div>
        
        <div class="item">
            <div>Área de atuação:</div>
            <div>
                <input type="text" name="atuacion" placeholder="Separado as áreas por virgulas">
            </div>
        </div>

        <button type="submit">Salvar</button>

    
    </section>
</form>
{% endblock content %}