{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="avatar"
     style= "background: url({{teacher.avatar_url}}) no-repeat center center/ cover"> </section>

    <section class="info">

        <h3>Novo professor</h3>
        
        <div class="item">
            <div>Nome completo:</div>
            <div>
                {{teacher.name}}
            </div>
        </div>
        
        <div class="item">
            <div>Idade:</div>
            <div>
                {{teacher.birthday}}
            </div>
        </div>
        
        <div class="item">
            <div>Grau de escolaridade:</div>
            <div>
                {{teacher.education}}
            </div>
        </div>
        
        <div class="item">
            <div>Tipo de aula:</div>
            <div>{{ "Presencial" if teacher.typeClass == "P" else "Á distância"}}</div>
        </div>
        
        <div class="item">
            <div>Área de atuação:</div>

            <div>
                {% for atuacion in teacher.atuacion %}

                <span>{{atuacion}}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde:</div>
            <div>
                {{teacher.created_at}}
            </div>
        </div>

        <div class="grid-buttons">
        <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
        

        <form action="/teachers?_method=DELETE" method="POST">
            <button type="submit">Deletar</button>
            </div>
            <input type="hidden" name="id" value="{{teacher.id}}">
        </form>
        
    </section>
</div>
{% endblock content %}